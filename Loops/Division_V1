 * 	Author:  COP2551C
 *  Date:	 9-9-25
 *  Summary: this program prompts the user to input two real numbers (N and D),
 *  			   divide first by second (N / D), then displays the two numbers and 
 *  			   their quotient (Q). 
 */

import java.util.Scanner; 			// import scanner to read keyboard input
import java.text.DecimalFormat;		// force decimal output format

public class Division_V1 
{
		public static void main(String[] args) 
		{
				// variables
						double N = 0.0;
						double D = 0.0;
						double Q = 0.0;
						Scanner sc = new Scanner(System.in);		// sc is the chosen Scanner name
						DecimalFormat DF = new DecimalFormat("##.##");		// to format (e.i. 5.00)
				
				// input 
						System.out.println("Enter N: ");
						N = sc.nextDouble();
						//------------------------------
						System.out.println("Enter D: ");
						D = sc.nextDouble();
						
				// process
						Q = N / D;
						
				// output
						System.out.println("The quotient of " + DF.format(N) + " and " + DF.format(D) + 
										   " is " + DF.format(Q));
					
						sc.close();		// closing Scanner
		}// end main method
}// class Division_V1
